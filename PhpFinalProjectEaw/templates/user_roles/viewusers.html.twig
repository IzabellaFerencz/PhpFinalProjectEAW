{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users%}
            <tr>
                <td>{{user.getUsername()}}</td>
                <td><a href="/user/roles/rolesofuser/{{user.getId()}}">View Roles</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
