{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>
    <a style="margin:10px;" class="btn btn-info" href="{{ path('post_index') }}">back to list</a>


    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ post.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ post.status }}</td>
            </tr>
            <tr>
                <th>Posted by</th>
                <td>{{ post.getUserId().getUsername() }}</td>
            </tr>
        </tbody>
    </table>

    {% if app.session.get('username') == post.getUserId().getUsername() %}

    <a style="margin:10px;" class="btn btn-warning" href="{{ path('post_edit', {'id': post.id}) }}">edit</a>

    {{ include('post/_delete_form.html.twig') }}

    {% endif %}
{% endblock %}
