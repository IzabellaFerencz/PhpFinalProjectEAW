{% extends 'base.html.twig' %}

{% block title %}New Account{% endblock %}

{% block body %}
    <h1>Create Profile</h1>
    <br/>
    <div style="margin:20px; color:red;">{{Message}}</div>

    <form action="/account/createprofile" method="POST" class = "form-horizontal">

        <div class="form-group">
            <label class="col-md-2 control-label">Firstname:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="firstname" value="{{Firstname}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Lastname:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="lastname" value="{{Lastname}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Email:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="email" value="{{Email}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Phone number:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="phonenr" value="{{PhoneNr}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Address:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="address" value="{{Address}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Save" />
            </div>
        </div>
        
    </form> 
    
{% endblock %}
