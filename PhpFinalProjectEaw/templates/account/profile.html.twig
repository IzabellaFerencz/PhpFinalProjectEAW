{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Address</th>
                <td>{{ profile.address }}</td>
            </tr>
            <tr>
                <th>Phonenr</th>
                <td>{{ profile.phonenr }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ profile.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ profile.lastname }}</td>
            </tr>
        </tbody>
    </table>

<div class="btn btn-warning"><a href="/account/editprofile">Edit</a></div>
<div class="btn btn-danger"><a href="/account/deleteprofile">Delete</a></div>
    
{% endblock %}
