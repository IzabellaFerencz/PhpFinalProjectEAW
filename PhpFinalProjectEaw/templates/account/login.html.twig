{% extends 'base.html.twig' %}

{% block title %}Log In{% endblock %}

{% block body %}
    <h1>Log In</h1>
    <br/>
    <a href="/account/register">Register as new user</a>
    <div style="margin:20px; color:red;">{{Message}}</div>

    <form action="/account/login" method="POST" class = "form-horizontal">

        <div class="form-group">
            <label class="col-md-2 control-label">Username:</label>
            <div class="col-md-4">
                <input type="text" class = "form-control" name="username" value="{{Username}}" required="true">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label">Password:</label>
            <div class="col-md-4">
                <input type="password" class = "form-control" name="password" required="true">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Log In" />
            </div>
        </div>
        
    </form> 
    
{% endblock %}
